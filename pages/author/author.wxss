page{
  height: 100%;
  font-family: PingFang SC;
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.author-box{
  width: 590rpx;
  height: 518rpx;
  background:rgba(255,255,255,.8);
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.author-title{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 26rpx 0 0 37rpx;
}
.title-ch{
  width: 300rpx;
  height: 84rpx;
  font-size: 60rpx;
  font-weight:bold;

}
.title-en{
  width: 230rpx;
  height: 22rpx;
  font-size: 16rpx;
  color: #999999;
  margin-left: 8rpx;
  margin-top: -5rpx;
}
.driver-logo{
  width: 32rpx;
  height: 84rpx;
  margin-left: 10rpx;
}
.driver-logo image{
  width: 32rpx;
  height: 84rpx;
}
.dirvie-texts{
  margin: 110rpx 0 0 38rpx;
}
.dirver{
  width: 360rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.prompt-ch{
  margin-top: 8rpx;
  width: 400rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
}
.prompt-en{
  margin-top: 6rpx;
  width: 410rpx;
  height: 40rpx;
  font-size: 16rpx;
  line-height: 18rpx;
  color: #AAAAAA;
}
.btn:not([size='default']){
  margin-top: 34rpx;
  width: 514rpx;
  height: 84rpx;
  border-radius: 42rpx;
  background-color: #093478;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.company-logo{
  width: 184rpx;
  height: 60rpx;
  position: absolute;
  bottom: -120rpx;
  left: 0;
  right: 0;
  margin: auto;
}
