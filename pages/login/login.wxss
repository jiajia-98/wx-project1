page{
  height: 100%;
  font-family: PingFang SC;
}
.bg{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.login-box{
  width: 590rpx;
  height: 518rpx;
  background:#fff;
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
  padding: 26rpx 38rpx 0;
}
.logo{
  width: 374rpx;
  height: 44rpx;
  position: absolute;
  top: -60rpx;
  left: 38rpx;
}
.please-login{
  width: 144rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: bold;
  font-size: 36rpx;
}
.confirm-ch{
  width: 460rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin-top: 8rpx;
  font-size: 20rpx;
}
.confirm-en{
  width: 430rpx;
  height: 40rpx;
  line-height: 18rpx;
  margin-top: 4rpx;
  font-size: 16rpx;
  color: #CCCCCC;
}
.input{
  margin-top: 52rpx;
}
.input input{
  height: 34rpx;
}
.username{
  width: 512rpx;
  height: 50rpx;
  border-bottom: 2rpx solid #333;
  font-size: 24rpx;
}
.password{
  margin-top: 42rpx;
  width: 512rpx;
  height: 50rpx;
  border-bottom: 2rpx solid #333;
  font-size: 24rpx;
}
.btns{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 84rpx;
  margin-top: 42rpx;
}
.login-btn:not([size='mini']){
  width: 316rpx;
  height: 84rpx;
  border-radius: 42rpx;
  background-color: #093478;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cancle-btn:not([size='mini']){
  width: 168rpx;
  height: 84rpx;
  border-radius: 42rpx;
  background-color: #CCCCCC;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}